@page
@model RazorPagesMovie.Pages.SearchModel
@{
    ViewData["Title"] = "Search Movies";
}

<h2>Search Movies</h2>

<form method="get" class="mb-4">
    <div class="mb-3">
        <label for="query">Title:</label>
        <input type="text" name="query" value="@Model.Query" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="genreId">Genre:</label>
        <select name="genreId" class="form-select">
            <option value="">-- Any Genre --</option>
            @foreach (var genre in Model.Genres)
            {
                <option value="@genre.Id" selected="@(genre.Id == Model.SelectedGenreId)">
                @genre.Name
                </option>

            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Results != null)
{
    <h4>Results:</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model.Results.Results)
        {
            <div class="col">
                <a asp-page="/MovieDetails" asp-route-id="@movie.Id" style="text-decoration: none; color: inherit;">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(movie.PosterPath))
                        {
                            <img src="@($"https://image.tmdb.org/t/p/w500{movie.PosterPath}")"
                                 class="card-img-top img-fluid"
                                 style="max-height: 400px; object-fit: contain;" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/500x750?text=No+Image"
                                 class="card-img-top" />
                        }

                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
